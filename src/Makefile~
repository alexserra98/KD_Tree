CXX=g++
CC=mpic++
TYPE = float
CXXTYPE = -DTYPE=$(TYPE)
CXXMPITYPE = -DMPITYPE=MPI_FLOAT
CXXOMPFLAGS = -fopenmp

all:  mpi omp
omp: main_openmp.cpp funct_openmp.hpp
	$(CXX) $(CXXTYPE) $(CXXOMPFLAGS) main_openmp.cpp funct_openmp.hpp -o main_mpi.x
mpi: main_mpi.cpp funct_mpi.hpp
	$(CC) $(CXXTYPE) $(CXXMPIFLAGS)  main_mpi.cpp funct_mpi.hpp -o main_mpi.x
clean:
	rm -f omp mpi
